{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deploy & Launch",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--lang", "en"
      ],
      "console": "integratedTerminal",
      "subProcess": false,
      "justMyCode": true,
      "stopOnEntry": false,
      "postDebugTask": "ethos start"
    },
    {
      "name": "Deploy & Launch [Fast]",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--fileext", "fast",
        "--lang", "en",
      ],
      "console": "integratedTerminal",
      "subProcess": false,
      "justMyCode": true,
      "stopOnEntry": false,
      "postDebugTask": "ethos start"      
    },       
    {
      "name": "Deploy Radio",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--radio",
        "--lang", "en",
      ],
      "console": "integratedTerminal",
      "subProcess": false,
      "justMyCode": true,
      "stopOnEntry": false,
    },
    {
      "name": "Deploy Radio [Fast]",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--fileext", "fast",
        "--radio",
        "--lang", "en",
      ],
      "console": "integratedTerminal",
      "subProcess": false,
      "justMyCode": true,
      "stopOnEntry": false,
    },
    {
      "name": "Deploy Radio + Serial Debug",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--radio",
        "--radio-debug",
        "--lang", "en",
      ],
      "console": "integratedTerminal",
      "subProcess": false,
      "justMyCode": true,
      "stopOnEntry": false,
    },
    {
      "name": "Deploy Radio + Serial Debug [Fast]",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--fileext", "fast",
        "--radio",
        "--radio-debug",
        "--lang", "en",
      ],
      "console": "integratedTerminal",
      "subProcess": false,
      "justMyCode": true,
      "stopOnEntry": false,
    },
    {
      "name": "Radio: Serial Debug",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--radio",
        "--connect-only",
        "--lang", "en",
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Clear locks",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": ["--config-env", "RFSUITE_CONFIG", "--clear-lock"],
      "console": "integratedTerminal",
      "justMyCode": true
    } 
  ],
}
