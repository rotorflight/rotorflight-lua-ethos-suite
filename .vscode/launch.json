{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deploy & Launch [X20S]",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--lang", "en"
      ],
      "env": {
        "ETHOS_FIRMWARE": "${config:ethos.firmware}"
      },
      "console": "integratedTerminal",
      "subProcess": false,
      "justMyCode": true,
      "stopOnEntry": false,
      "postDebugTask": "ethosStart"       
    },
    {
      "name": "Deploy & Launch [Fast]  [X20S]",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--fileext", "fast",
        "--lang", "en",
      ],
      "env": {
        "ETHOS_FIRMWARE": "${config:ethos.firmware}"
      },      
      "console": "integratedTerminal",
      "subProcess": false,
      "justMyCode": true,
      "stopOnEntry": false,
      "postDebugTask": "ethosStart"       
    },
    {
      "name": "Deploy & Choose",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--lang", "en"
      ],
      "env": {
        "ETHOS_FIRMWARE": "X18S_FCC"
      },
      "console": "integratedTerminal",
      "subProcess": false,
      "justMyCode": true,
      "stopOnEntry": false,
      "postDebugTask": "ethosStartX18S"       
    },           
    {
      "name": "Deploy Radio",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--radio",
        "--lang", "en",
      ],
      "console": "integratedTerminal",
      "subProcess": false,
      "justMyCode": true,
      "stopOnEntry": false,
    },
    {
      "name": "Deploy Radio [Fast]",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--fileext", "fast",
        "--radio",
        "--lang", "en",
      ],
      "console": "integratedTerminal",
      "subProcess": false,
      "justMyCode": true,
      "stopOnEntry": false,
    },
    {
      "name": "Deploy Radio + Serial Debug",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--radio",
        "--radio-debug",
        "--lang", "en",
      ],
      "console": "integratedTerminal",
      "subProcess": false,
      "justMyCode": true,
      "stopOnEntry": false,
    },
    {
      "name": "Deploy Radio + Serial Debug [Fast]",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/scripts/deploy.py",
      "args": [
        "--config-env", "RFSUITE_CONFIG",
        "--fileext", "fast",
